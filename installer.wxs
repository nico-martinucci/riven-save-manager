    </Directory>

    <Feature Id="ProductFeature" Title="Riven Save Manager" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>
  </Product>

  <Fragment>
    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="MainExecutable" Guid="9d7ed4f2-b8d6-47dc-9c56-5a13106a8166">
        <File Source="path\to\your\app\app-0.1.0\riven-save-manager.exe" KeyPath="yes" />
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Directory="ProgramMenuFolder"
                  Name="Riven Save Manager"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="icon.ico"
                  Advertise="no"
                  IconIndex="0"
                  Target="[INSTALLFOLDER]app-0.0.0\riven-save-manager.exe"
                  Description="Launch Riven Save Manager" />
        <Shortcut Id="ApplicationDesktopShortcut"
                  Directory="DesktopFolder"
                  Name="Riven Save Manager"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="icon.ico"
                  Advertise="no"
                  IconIndex="0"
                  Target="[INSTALLFOLDER]app-0.0.0\riven-save-manager.exe"
                  Description="Launch Riven Save Manager" />
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
